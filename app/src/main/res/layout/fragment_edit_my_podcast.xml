<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile.AddNewPodcastFragment">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/txtAddNewPodcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="My Podcast " />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Danh mục "
                android:textColor="#7a31d6"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtChonDanhmuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Tất cả danh mục"
                android:textAlignment="center"
                android:textSize="21dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtChonAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Album "
                android:textColor="#7a31d6"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/spnAlbum"
                android:layout_width="347dp"
                android:layout_height="37dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Tiêu đề "
                android:textColor="#7a31d6"
                android:textSize="21dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTitle4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="21dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Mô tả "
                android:textColor="#7a31d6"
                android:textSize="21dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDescription4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="21dp" />


            <TextView
                android:id="@+id/txtChonAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text=" Audio"
                android:textColor="#7a31d6"
                android:textSize="21dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAddAudio"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/admin_button_color"
                android:text="Chọn audio"
                android:textAlignment="center"
                android:textSize="20dp"
               
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xóa tập"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_gradient"
                    />

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cập nhật tập"
                    android:textStyle="bold"
                    android:background="@drawable/button_gradient"/>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>