<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <ImageView

        android:id="@+id/imgAnhTap"
        android:adjustViewBounds="true"
        android:layout_width="100dp"
        android:layout_height="match_parent"

        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout

        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDanhMuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Danh má»¥c"
            android:textColor="#B88437"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTenAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Ten Album" />

        <TextView
            android:id="@+id/txtTenTap"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten Tap" />

        <TextView
            android:id="@+id/txtMota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"

            android:text="Mo ta" />

        <TextView
            android:id="@+id/txtUri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="" />
    </LinearLayout>
</LinearLayout>