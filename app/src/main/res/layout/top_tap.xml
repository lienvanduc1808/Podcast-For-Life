<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imgTopTap"
        android:layout_width="120dp"
        android:layout_height="100dp"

        app:srcCompat="@drawable/ic_launcher_background" />


    <LinearLayout
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView

            android:id="@+id/txtNameRankingTap"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="105. Còn yêu được cứ yêu đi"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTimeRankingTap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Chủ Nhật" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/imgBtnMoreRankingTap"
        android:layout_marginLeft="10dp"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="30dp"
        android:background="#e9e8e9"
        android:src="@drawable/more_horiz_grey"
        />


</LinearLayout>