<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile.AddNewPodcastFragment">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/txtAddNewPodcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Thêm Podcast mới " />

        <TextView
            android:id="@+id/txtXong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#7a31d6"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Xong" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtChonAudio"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#7a31d6"
                android:textStyle="bold"
                android:textSize="21dp"
                android:text="Chọn File Audio" />
            <Button
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                android:id="@+id/btnAddAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Chọn File Audio "
                android:textColor="#FFFFFF"
                android:background="@drawable/admin_button_color"/>
            <TextView
                android:id="@+id/txtNameUri"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="" />
            <TextView
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn danh mục "
                android:textColor="#7a31d6"
                android:textStyle="bold"
                android:textSize="21dp"/>
            <TextView
                android:id="@+id/txtChonDanhmuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="21dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Tất cả danh mục" />
            <TextView
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề "
                android:textColor="#7a31d6"
                android:textStyle="bold"
                android:textSize="21dp"/>
            <EditText
                android:id="@+id/etTitle4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="21dp" />
            <TextView
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả "
                android:textColor="#7a31d6"
                android:textStyle="bold"
                android:textSize="21dp"/>
            <EditText
                android:id="@+id/etDescription4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="21dp" />
            <TextView
                android:id="@+id/txtChonAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#7a31d6"
                android:textSize="21dp"
                android:textStyle="bold"
                android:layout_margin="30dp"
                android:text="Chọn Album " />
            <Spinner
                android:id="@+id/spnAlbum"
                android:layout_width="347dp"
                android:layout_height="37dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textAlignment="center"
                android:textSize="21dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>