<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="Quản lí danh mục"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/adminListCateRV" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adminListCateRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_add_cate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:drawableLeft="@drawable/ic_add"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Thêm danh mục"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/admin_button_color"
         />

</LinearLayout>
